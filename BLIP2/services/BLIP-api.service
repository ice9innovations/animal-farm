[Unit]
Description=BLIP REST API Service
After=network.target
StartLimitBurst=3
StartLimitIntervalSec=300

[Service]
Type=simple
Restart=on-failure
RestartSec=5
User=sd
Group=sd
WorkingDirectory=/home/sd/animal-farm/BLIP2
ExecStart=/home/sd/animal-farm/BLIP2/BLIP.sh
EnvironmentFile=/home/sd/animal-farm/BLIP2/.env
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
